{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "composite": false,
      "declaration": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "jsx": "react-jsx",
      "lib": ["DOM", "ES2021"],
      "module": "ES6",
      "moduleResolution": "Node",
      "noEmit": true,
      "outDir": "lib",
      "rootDir": "src",
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "ES2021"
  },
  "include": ["src/**/*", "./css-modules.d.ts"]
}
